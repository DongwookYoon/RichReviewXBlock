doctype html

html
    head
        meta(charset='utf-8')
        meta(http-equiv="cache-control" content="max-age=0")
        meta(http-equiv="cache-control" content="no-cache")
        meta(http-equiv="expires" content="0")
        meta(http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT")
        meta(http-equiv="pragma" content="no-cache")
        meta(http-equiv="Cache-control" content="no-store")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1")
        title= title
        link(rel='shortcut icon' href="/img/favicon.ico" type='image/x-icon')
        link(rel='stylesheet', href=cdn_endpoint+'/lib/bootstrap-3.2.0-dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href=cdn_endpoint+'/lib/font-awesome-4.6.3/css/font-awesome.min.css')
        if cur_page === "Viewer"
            link(rel='stylesheet', href='/stylesheets/page_vr.css')
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
        script(src=cdn_endpoint+'/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')
    body
        - var is_admin = user !== null && user !== undefined && user.pilot !== undefined && user.pilot.is_admin === 'true'
        .navbar.navbar-default.navbar-fixed-top(role="navigation" id="r2_navbar")
            .container.r2-topmenu
                .navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    a.navbar-brand(href="/about")
                        |RichReview
                .collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-left
                        li(class=cur_page === "About" ? "active" : "")
                            a(href="/about")
                                |About
                        li(class=cur_page === "Demo" ? "active" : "")
                            a(href="/demo")
                                |Demo
                        li(class=cur_page === "mydocs" ? "active" : "")
                            a(href="/mydocs")
                                |My Docs
                        li(class=cur_page === "upload" ? "active" : "")
                            a(href="/upload")
                                |Upload
                        if is_admin
                            li(class=cur_page === "pilot_admin" ? "active" : "")
                                a(href='/pilot_admin') Admin
                        li(class = cur_page === "Support" ? "active" : "")
                            a(href="/support")
                                | Support
                    ul.nav.navbar-nav.navbar-right
                        include components/_login_dropdown

        .content_table
            .content_header
            .content_body
                block content
