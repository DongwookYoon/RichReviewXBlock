doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv="cache-control" content="max-age=0")
        meta(http-equiv="cache-control" content="no-cache")
        meta(http-equiv="expires" content="0")
        meta(http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT")
        meta(http-equiv="pragma" content="no-cache")
        meta(http-equiv="Cache-control" content="no-store")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1")
        title= title
        link(rel='stylesheet', href='/bootstrap-3.2.0-dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
        if cur_page == "Viewer"
            link(rel='stylesheet', href='/stylesheets/page_vr.css')
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
        script(src='/bootstrap-3.2.0-dist/js/bootstrap.min.js')
    body
        // header
        .navbar.navbar-default.navbar-fixed-top(role="navigation" id="r2_navbar")
            .container.r2-topmenu
                .navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    a.navbar-brand(href="/about")
                        |RichReview
                .collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-left
                        li(class=cur_page === "About" ? "active" : "")
                            a(href="/about")
                                |About
                        li(class=cur_page === "Demo" ? "active" : "")
                            a(href="/demo")
                                |Demo
                        li(class=cur_page === "MyDocs" ? "active" : "")
                            a(href="/mydocs")
                                |My Docs
                        li(class=cur_page === "Upload" ? "active" : "")
                            a(href="/upload")
                                |Upload
                        //li(class=cur_page === "Viewer" ? "active" : "")
                            a(href="/viewer")
                                | Viewer
                        li(class = cur_page === "Support" ? "active" : "")
                            a(href="/support")
                                | Support
                    ul.nav.navbar-nav.navbar-right
                        li(class = cur_page === "Account" ? "active" : "")
                            if user == undefined
                                a(href="/login_cornell")
                                    i.fa.fa-sign-in
                                    |&nbspNetID Login
                            else
                                a(href="/account")
                                    i.fa.fa-user
                                    |&nbsp#{user.nick}
                        if user != undefined
                            li
                                a(href="/logout")
                                    i.fa.fa-sign-out
                                    |&nbspLogout

        .content_table
            .content_header
            .content_body
                block content