extends __layout_cprght
block content_with_cprght
    h3.course_title
        |Math2220: Multivariable Calculus
    p
        |Logged in as <b>#{user.email}</b>

    #announcements.panel.panel-default
        .panel-heading
            h5
                |Announcements

        #announcement_items.panel-body
            p
                |Welcome to RichReview math feedback tool.
            p
                |Please finish your assignment on a&nbsp;
                a(href='http://stationary.prissed.com/images/lined-paper.gif' target='_blank')
                    |lined notebook
                |. Digitize the hard-copy to a PDF by using a mobile scanning app (e.g. GeniusScan for&nbsp;
                a(href='https://itunes.apple.com/us/app/genius-scan-pdf-scanner/id377672876?mt=8' target='_blank')
                    |iOS
                |&nbsp;or&nbsp;
                a(href='https://play.google.com/store/apps/details?id=com.thegrizzlylabs.geniusscan.free&hl=en' target='_blank')
                    |Android
                |&nbsp;),  and submit the PDF to the list below.
            p
                |If you don't have an access to the mobile app, please submit the hard-copy (still written on the&nbsp;
                a(href='http://stationary.prissed.com/images/lined-paper.gif' target='_blank')
                    |lined notebook
                |) to the designated place as usual.

    #surveys.panel.panel-default
        .panel-heading
            h5
                |Surveys
        #survey_items.panel-body

    #submissions.panel.panel-default
        .panel-heading
            h5
                |Submissions
        .panel-body
            table( class="table table-striped table-hover ")
                thead
                    tr
                        <th></th>
                        <th>Due</th>
                        <th>File</th>
                        <th>Submission</th>
                        <th>Review</th>
                tbody

                tbody#submission_items
    #progress-modal
        #progress-bar.ui-progressbar

    link(rel='stylesheet', href='/stylesheets/course.css')
    link(rel="stylesheet", href="/static_viewer/lib_ext/font-awesome-animation.min.css")
    link(rel="stylesheet", href="//code.jquery.com/ui/1.11.4/themes/ui-lightness/jquery-ui.css")
    script(src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js")
    script(type='text/javascript', src="//code.jquery.com/ui/1.11.4/jquery-ui.js")
    script(type='text/javascript', src="/js/util_helper.js")
    script(type='text/javascript', src="/js/course_helper.js")
