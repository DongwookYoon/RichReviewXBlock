extends __layout_cprght
block content_with_cprght
   form.form-horizontal(action="support" method="post" onsubmit="")
      fieldset
         .well.support_well
            legend
               |Report a Problem
            .form-group.support-form-group
               label.col-lg-12.control-lable(for="inputSubject")
                  |Subject
               .col-lg-12.support-item
                  input.form-control(name='subject' type="text" placeholder="Subject")
               label.col-lg-12.control-lable(for="inputReply")
                  |Your Contact Information (not required)
               .col-lg-12.support-item
                  input.form-control(name='reply' type="text" placeholder="Please provide your email address so that we can contact you back.")
               label.col-lg-12.control-lable(for="inputText")
                  |Contents
               .col-lg-12.support-item
                  textarea.form-control(name='mailbody' rows="8" placeholder="Describe this problem")
               .col-lg-12
                  button.btn.btn-primary.float_right(id="submit_btn" type="submit" onclick="$('#submit_btn').toggleClass('disabled', true);")
                     |Send
